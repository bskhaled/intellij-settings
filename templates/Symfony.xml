<templateSet group="Symfony">
  <template name="c-render" value="return $this-&gt;render('$BUNDLE$', array(&#10;    &#10;));" toReformat="false" toShortenFQNames="true">
    <variable name="BUNDLE" expression="classNameComplete()" defaultValue="&quot;@App/index.html.twig&quot;" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="c-form" value="$form = $this-&gt;createForm($CLASSNAME$::class);&#10;&#10;$form-&gt;handleRequest($request);&#10;if ($form-&gt;isSubmitted() &amp;&amp; $form-&gt;isValid()) {&#10;    // todo - do some work, like saving stuff&#10;&#10;    $this-&gt;addFlash('success', '$SUCCESSMESSAGE$');&#10;&#10;    return $this-&gt;redirectToRoute('$ROUTENAME$', []);&#10;}" toReformat="false" toShortenFQNames="true">
    <variable name="CLASSNAME" expression="" defaultValue="&quot;$Class&quot;" alwaysStopAt="true" />
    <variable name="SUCCESSMESSAGE" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="ROUTENAME" expression="classNameComplete()" defaultValue="&quot;route_name&quot;" alwaysStopAt="true" />
    <context>
      <option name="PHP" value="true" />
    </context>
  </template>
</templateSet>